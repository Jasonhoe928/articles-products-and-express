{{#with productToEdit}}
<form action="/product/{{id}}?_method=PUT" method="post">
  <h3>
    <label>EDIT PRODUCTS</label>
  </h3>
  <label>Name:
    <input type="text" name='name' id=''>
  </label>
  <br><br>
  <label>Description:
    <input type="text" name='description' id=''>
  </label>
  <br><br>
  <label>Price:
    <input type="number" min='0' name='price' id=''>
  </label>
  <br><br>
  <label>
    <input type="submit" value='Submit' >
  </label>
  <br><br>
  <a href="/product/">Back to Products</a>
  {{/with}}
</form> 

